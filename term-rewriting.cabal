        transformers >= 0.5.6.2,
        libBF >= 0.6.7,
        time >= 1.11.1.1,
        text >= 1.2.5.0,
        uniplate >= 1.6.13,
        process >= 1.6.16.0,
        directory >= 1.3.6.2,
        async >= 2.2.4,
        template-haskell >= 2.18.0.0,
        pretty >= 1.1.3.6,
        filepath >= 1.4.2.2,
        bytestring, 
        clock >= 0.8.4
    ghc-options: 
        -Wall

